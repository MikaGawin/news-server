{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "POST /api/topics": {
    "description": "adds the supplied topic to the database",
    "example body": { "slug": "dogs", "description": "dogs are great pets" },
    "exampleResponse": {
      "topic": { "slug": "dogs", "description": "dogs are great pets" }
    }
  },
  "GET /api/users": {
    "description": "serves an array of all users",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "username": "footballman",
          "name": "James Giles",
          "avatar_url": "https://pictureurl.com"
        }
      ]
    }
  },
  "GET /api/users/username": {
    "description": "serves the requested user",
    "queries": [],
    "exampleResponse": {
      "topics": {
        "username": "footballman",
        "name": "James Giles",
        "avatar_url": "https://pictureurl.com"
      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order", "limit", "p"],
    "exampleResponse": {
      "articlesCount": 1,
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "POST /api/articles": {
    "description": "adds an article to the database",
    "example body": {
      "title": "Seafood substitutions are increasing",
      "topic": "cooking",
      "author": "weegembump",
      "body": "Text from the article.."
    },
    "exampleResponse": {
      "articles": {
        "article_id": 3,
        "title": "Seafood substitutions are increasing",
        "topic": "cooking",
        "author": "weegembump",
        "body": "Text from the article..",
        "created_at": "2018-05-30T15:59:13.341Z",
        "votes": 0,
        "comment_count": 0
      }
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves the requested article",
    "queries": [],
    "exampleResponse": {
      "article_id": 1,
      "title": "Living in the shadow of a great man",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "I find this existence challenging",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 100,
      "comment_count": 5,
      "article_img_url": "https://pictureurl.com"
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "updates data on an article",
    "example body": {
      "inc_votes": 15
    },
    "exampleResponse": {
      "article_id": 1,
      "title": "Living in the shadow of a great man",
      "topic": "mitch",
      "author": "butter_bridge",
      "body": "I find this existence challenging",
      "created_at": "2020-07-09T20:11:00.000Z",
      "votes": 100,
      "article_img_url": "https://pictureurl.com"
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "serves an array of all comments on the requested article",
    "queries": ["limit", "p"],
    "exampleResponse": {
      "articlesCount": 1,
      "articles": [
        {
          "comment_id": "1",
          "votes": "10",
          "created_at": "2021-07-09T20:11:00.000Z",
          "author": "butter_bridge",
          "body": "This article was good",
          "article_id": "1"
        },
        {
          "comment_id": "2",
          "votes": "15",
          "created_at": "2020-07-09T20:11:00.000Z",
          "author": "jerry_springer",
          "body": "This article was kinda ok",
          "article_id": "1"
        }
      ]
    },
    "POST /api/articles/:article_id/comments": {
      "description": "adds a new comment with supplied article id to the database",
      "example body": {
        "username": "icellusedkars",
        "body": "This is my comment"
      },
      "exampleResponse": {
        "comment_id": "12",
        "votes": "0",
        "created_at": "2021-07-09T20:11:00.000Z",
        "author": "butter_bridge",
        "body": "This article was good",
        "article_id": "1"
      }
    },
    "PATCH /api/comments/comment_id": {
      "description": "updates data on a comment",
      "example body": {
        "inc_votes": 15
      },
      "exampleResponse": {
        "comment_id": "1",
        "votes": "25",
        "created_at": "2021-07-09T20:11:00.000Z",
        "author": "butter_bridge",
        "body": "This article was good",
        "article_id": "1"
      }
    },
    "DELETE /api/comments/comment_id": {
      "description": "removes the relevant comment from the database"
    }
  }
}
